<h1> Revise Your Fury! </h1>
<div class="container">
<!-- :post is a symbol -->
<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
<!-- patch method is used for updating things, make sure post_path is singular -->
  <p>
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </p>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<p> <%= link_to 'Back', posts_path %> </p>


</div>
